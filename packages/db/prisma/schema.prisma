generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())

  sites     Site[]
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Site {
  id        String   @id @default(uuid())
  userId    String
  domain    String   @unique
  createdAt DateTime @default(now())

  user       User        @relation(fields: [userId], references: [id])
  dailyStats DailyStat[]
}

/* ===========================
   RAW EVENTS (SOURCE OF TRUTH)
   =========================== */
model DailyStat {
  id           String   @id @default(uuid())
  siteId       String
  visitorId    String
  eventType    String?
  date         DateTime
  page         String
  pageTitle    String?
  previousPage String?
  country      String?
  browser      String?
  device       String?
  os           String?
  TimeSpent    Int?
  IpAddress    String?

  site Site @relation(fields: [siteId], references: [id])

  @@index([siteId, date])
  @@index([siteId, visitorId])
  @@index([siteId, page])
}

/* ===========================
   HOURLY TIME-SERIES (FAST)
   =========================== */
model HourlySiteStat {
  siteId   String
  hour     DateTime
  views    Int      @default(0)
  visitors Int      @default(0)

  @@id([siteId, hour])
  @@index([siteId, hour])
}

/* ===========================
   VISITOR DEDUP PER HOUR
   =========================== */
model HourlyVisitor {
  siteId    String
  hour      DateTime
  visitorId String

  @@id([siteId, hour, visitorId])
}

/* ===========================
   DAILY BREAKDOWNS
   =========================== */
model DailyBreakdown {
  siteId String
  date   DateTime
  type   String   // browser | country | device | os | page
  key    String
  views  Int      @default(0)

  @@id([siteId, date, type, key])
  @@index([siteId, date, type])
}
